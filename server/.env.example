# ==================================
# Coders Adda Automotive AI - Environment Variables
# ==================================

# Database
MONGODB_URI=mongodb://localhost:27017
DB_NAME=automotive_ai

# Server
PORT=4000
NODE_ENV=development

# LLM Configuration
LLM_ENABLED=true
LLM_PROVIDER=gemini
# Options: 'gemini' | 'inbuilt'

# Google Gemini API
GEMINI_API_KEY=AIzaSyDXEHcETKc8E1WCa1Sh_xMeqyfrBOknpy0

# Inbuilt/Custom LLM (if using LLM_PROVIDER=inbuilt)
INBUILT_LLM_URL=http://localhost:8000/v1/completions
INBUILT_LLM_KEY=your_custom_llm_api_key_here

# Embeddings Configuration
EMBEDDING_PROVIDER=gemini
# Options: 'gemini' | 'custom'

# Custom Embeddings API (if using EMBEDDING_PROVIDER=custom)
CUSTOM_EMBED_URL=http://localhost:8000/v1/embeddings
CUSTOM_EMBED_KEY=your_custom_embed_api_key_here

# Vector Database Configuration
VECTOR_PROVIDER=local
# Options: 'local' | 'pinecone' | 'weaviate'

# Pinecone (if using VECTOR_PROVIDER=pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=coders-adda

# Weaviate (if using VECTOR_PROVIDER=weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# RAG Configuration
RAG_SIMILARITY_THRESHOLD=0.55
RAG_TOP_K=5
RAG_MAX_CONTEXT_LENGTH=2000

# Session Configuration
SESSION_MAX_SIZE=1000
SESSION_MAX_AGE=3600000
SESSION_MAX_MESSAGES=6
SESSION_RATE_LIMIT=60

# Logging
LOG_LEVEL=info
LOG_FILE=logs/chatbot.log

# Security
API_RATE_LIMIT=100
API_RATE_WINDOW=60000
